<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <ImageView
            android:id="@+id/img_producto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_outline_black_24dp"
            />

        <TextView
            android:id="@+id/nombre_producto"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_producto"
            android:layout_toEndOf="@+id/img_producto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Nombre del Producto"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/precio_publico"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombre_producto"
            android:layout_toEndOf="@+id/img_producto"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:text="Precio"
            android:textSize="20sp"
            />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_toEndOf="@+id/nombre_producto"
            android:layout_toRightOf="@id/img_producto"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>